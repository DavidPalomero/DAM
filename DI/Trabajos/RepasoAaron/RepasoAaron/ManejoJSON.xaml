<Window x:Class="RepasoAaron.ManejoJSON"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepasoAaron"
        mc:Ignorable="d"
        Title="ManejoJSON" Height="450" Width="800" Loaded="Window_Loaded"><!--Triger-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgJson" Width="800" Height="450" ItemsSource="{Binding Pokemones}" MouseLeftButtonDown="mostrarDatosPokemon" AutoGenerateColumns="False" CanUserAddRows="False">
            <Grid.Column>0</Grid.Column>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre del Pokemon" Width="*" Binding="{Binding Nombre}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
